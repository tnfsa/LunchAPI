{
    "openapi": "3.0.3",
    "info": {
        "title": "Account Management",
        "description": "Account Management",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "https://lunchapi.hsuan.app/api/"
        }
    ],
    "paths": {
        "/register": {
            "post": {
                "summary": "註冊",
                "requestBody": {
                    "description": "用戶資訊",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "example": {
                                "name": "Student Test",
                                "email": "a810000@gm.tnfsh.tn.edu.tw",
                                "password": "strong_password"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccessToken"
                                },
                                "example": {
                                    "access_token": "xxxxxxx",
                                    "token_type": "Bearer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/login": {
            "post": {
                "summary": "登入",
                "requestBody": {
                    "description": "用戶資訊",
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/User"
                            },
                            "example": {
                                "email": "a810000@gm.tnfsh.tn.edu.tw",
                                "password": "strong_password"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AccessToken"
                                },
                                "example": {
                                    "access_token": "xxxxxxx",
                                    "token_type": "Bearer"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/me": {
            "get": {
                "summary": "用戶資訊",
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    }
                },
                "security": [
                    {
                        "bearerAuth": [
                            "auth"
                        ]
                    }
                ]
            }
        }
    },
    "components": {
        "schemas": {
            "User": {
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64"
                    },
                    "email": {
                        "type": "string",
                        "format": "email"
                    },
                    "name": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    },
                    "email_verified_at": {
                        "type": "string",
                        "format": "datetime"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "datetime"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "datetime"
                    }
                },
                "example": {
                    "id": 0,
                    "name": "Name",
                    "email": "a810000@gm.tnfsh.tn.edu.tw",
                    "email_verified_at": null,
                    "created_at": "2021-04-25T15:24:20.000000Z",
                    "updated_at": "2021-04-25T15:24:20.000000Z"
                }
            },
            "AccessToken": {
                "properties": {
                    "access_token": {
                        "type": "string"
                    },
                    "token_type": {
                        "type": "string"
                    }
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer"
            }
        }
    },
    "security": [
        {
            "bearerAuth": [
                "auth"
            ]
        }
    ]
}
